{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "demobitsjan2024"
		},
		"LS_SQL_SourceDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'LS_SQL_SourceDB'"
		},
		"LS_SQL_TargetDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'LS_SQL_TargetDB'"
		},
		"LS_Storage_demobitsadlsgen2_PO_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'LS_Storage_demobitsadlsgen2_PO'"
		},
		"LS_Storage_demobitsadlsgen2_PO_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://demobitsadlsgen2.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "demobitsjan2024_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"LS_SQL_SourceDB_connectionString": {
						"value": "[parameters('LS_SQL_SourceDB_connectionString')]"
					},
					"LS_SQL_TargetDB_connectionString": {
						"value": "[parameters('LS_SQL_TargetDB_connectionString')]"
					},
					"LS_Storage_demobitsadlsgen2_PO_accountKey": {
						"value": "[parameters('LS_Storage_demobitsadlsgen2_PO_accountKey')]"
					},
					"LS_Storage_demobitsadlsgen2_PO_properties_typeProperties_url": {
						"value": "[parameters('LS_Storage_demobitsadlsgen2_PO_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "demobitsjan2024_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'demobitsjan2024_ArmTemplate_0')]"
			]
		}
	]
}